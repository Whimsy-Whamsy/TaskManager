@model LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <form asp-action="Login" method="post" class="w-100" style="max-width: 400px;">
        <h2 class="text-center mb-4">@ViewData["Title"]</h2>
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" type="email" class="form-control mb-3" placeholder="Enter your email" />
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" type="password" class="form-control mb-3" placeholder="Enter your password" />
        <input type="submit" class="btn btn-dark btn-block" value="Login" />
    </form>
</div>
</body>
</html>